<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.threel.animeshqip">

    <application
        android:allowBackup="true"
        android:icon="@drawable/animenodecription"
        android:label="Anime Mania"
        android:roundIcon="@drawable/animenodecription"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Search"></activity>
        <activity
            android:name=".VideoPlayer"
            android:screenOrientation="landscape" />
        <activity android:name=".Episodes" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Welcome"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>